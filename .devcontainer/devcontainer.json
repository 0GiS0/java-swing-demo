{
	"name": "‚òï Java Swing GUI üñ•Ô∏è + MySQL",
	"dockerComposeFile": "compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/java-swing-demo",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": true,
			"version": "8",
			"jdkDistro": "ms",			
			"mavenVersion": "3.5.4"			
		}
		
	},
	"containerEnv": {

		// MacOS / Linux X11 Forwarding
		"DISPLAY": "host.docker.internal:0"

		// Windows WSL2 X11 Forwarding
		// "DISPLAY": "${localEnv:DISPLAY}"    
	},
	"postCreateCommand": "javac -version && mvn clean install -q",
	"customizations": {
		"vscode": {
			"extensions": [
				"codespaces-Contrib.codeswing",
				"redhat.java",
				"cweijan.vscode-mysql-client2"
			]
		}
	}
}
